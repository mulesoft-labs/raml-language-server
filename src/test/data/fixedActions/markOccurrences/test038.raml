#%RAML 1.0
title: Example with headers
traits:
  chargeable:
    headers:
      X-Dept:
        type: array
        description: |
          A department code to be charged.
          Multiple of such headers are allowed.
        items:
          pattern: ^\d+\-\w+$
          example: 230-OCTO
  trace!able:
    headers:
      X-Tracker:
        description: A code to track API calls end to end
        example: abcdefghi
        maxLength: <<maxLength>>
/users:
  get:
    is: [ chargeable, trace!able: {max!Length : 10} ]
    description: |
      The HTTP interaction will look like
  post:
    is: [chargeable]
  patch:
    is: [trace*able: {maxLength : 10}]