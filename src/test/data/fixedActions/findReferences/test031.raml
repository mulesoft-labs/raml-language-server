#%RAML 1.0
title: Illustrating annotations
annotationTypes:
  deprecated: boolean
  experimental: string
  feedback*Requested: string?
  testHarness:
    type: string # This line can be omitted as it's the default type
    displayName: test
    allowedTargets: Resource
  badge:         # This annotation type allows string values, too
  clearanceLevel:
    properties:
      level:
        enum: [ low, medium, high ]
        required: true
      signature:
        pattern: "\\d{3}-\\w{12}"
        required: true
/groups:
  (experimental): resource
  (feedback!Requested):
        