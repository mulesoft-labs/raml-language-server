{
   "$schema":"http://json-schema.org/schema#",
   "type":"object",
   "title":"Events",
   "description":"Represents list of events",
   "properties":{
      "events":{
         "type":"array",
         "required":true,
         "items":{
            "$ref":"#/definitions/event"
         }
      }
   },
   "definitions":{
        "event" : {
          "properties":{
             "id":{
                "type":"number",
                "required":true
             }
          },
          "additionalProperties":false
        },
        "eventProductItem":{
           "type":"object",
           "properties":{
              "id":{
                 "type":"string"
              },
              "productId":{
                 "type":"string"
              },
              "eventId":{
                 "type":"string"
              },
              "amount":{
                 "type":"string"
              },
              "assetTypeCode":{
                 "type":"string"
              }
           }
        },
        "store":{
           "type":"object",
           "properties":{
              "id":{
                 "type":"string"
              },
              "storeCode":{
                 "type":"string"
              },
              "coords":{
                 "type":"string"
              }
           }
        }
     }

}
